<div class="Container">
 
 <h1>Craigslist JR | Posts</h1>


 <table border="1">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
        <td><a href="post/<%= post.id %>"><%= post.title %></a></td>
        <td><%= post.description %></td>
        <td>$<%= post.price %></td>
  </tr>
  <% end %>

 </table> 
</div>
